<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola GET"
        android:id="@+id/txt_Hola"
        android:layout_marginTop="49dp"
        android:background="#ff3285ff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_Nombre"
        android:layout_marginTop="57dp"
        android:hint="Escribe tu nombre"
        android:layout_below="@+id/txt_Hola"
        android:layout_centerHorizontal="true"
        android:background="#ff58cc1e"
        android:textColor="#ffcc4d81" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Nombre"
        android:id="@+id/btn_Saludar"
        android:layout_below="@+id/edt_Nombre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Escribe tu nombre"
        android:background="#ff58cc1e"
        android:textColor="#ffcc4d81"
        android:layout_below="@+id/edt_Nombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Escribe tu nombre"
        android:background="#ff58cc1e"
        android:textColor="#ffcc4d81"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
